<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Banco"
		class="sapUiPopupWithPadding sapUiSizeCompact"
		items="{
			path: '/Bancos',
			sorter: {
				path: 'Nome'
			}
		}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{Nome}"
			description="{Codigo}" />
	</SelectDialog>
</core:FragmentDefinition>