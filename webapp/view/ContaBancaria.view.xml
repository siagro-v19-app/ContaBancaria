<mvc:View
controllerName="br.com.idxtecContaBancaria.controller.ContaBancaria"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableConta"
						rows="{path: '/ContaBancarias'}">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Contas Bancárias"/> 
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Agencia" sortProperty="Agencia">
								<Label text="Agencia"/>
								<t:template>
									<Text text="{Agencia}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="NumeroConta" sortProperty="NumeroConta">
								<Label text="NumeroConta"/>
								<t:template>
									<Text text="{NumeroConta}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button id="refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
					</Toolbar> 
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>